{
  "name": "<$ name $>",
  "version": "1.0.0",
  "description": "<$ description $>",
  "main": "index.js",
  "scripts": {
    "watch": "node ./build/build.js -w",
    "watch:prod": "node ./build/build.js -w -p",
    "build": "node ./build/build.js -p",
    "build:dev": "node ./build/build.js",
    {% if cross %}
    "watch:cross": "{% if transWeb %}npx npm-run-all --parallel 'watch --wx --ali --swan --web' httpserver{% else %}npm run watch --wx --ali --swan{% endif %}",
    "watch:prod:cross": "{% if transWeb %}npx npm-run-all --parallel 'watch:prod --wx --ali --swan --web' httpserver{% else %}npm run watch:prod --wx --ali --swan{% endif %}",
    "build:cross": "npm run build --wx --ali --swan{% if transWeb %} --web{% endif %}",
    "build:dev:cross": "npm run build:dev --wx --ali --swan{% if transWeb %} --web{% endif %}",
    {% endif %}
    {% if transWeb %}
    "watch:web": "npx npm-run-all --parallel watchwebpure httpserver",
    "watchwebpure": "npm run watch --web",
    "httpserver": "npx http-server dist/web",
    {% endif %}
    {% if needEslint %}
    "lint": "eslint --ext .js,.mpx src/",
    {% endif %}
    {% if needUnitTest %}
    "test": "npm run build && jest",
    "puretest": "jest",
    {% endif %}
    {% if needDll %}
    "build:dll": "node ./build/buildDll.js",
    {% endif %}
    "help": "node ./build/build.js --help"
  },
  "author": "<$ author $>",
  "license": "ISC",
  "dependencies": {
    "@mpxjs/api-proxy": "^2.5.10",
    {% if transWeb %}
    "vue": "^2.6.10",
    "vue-i18n": "^8.15.3",
    {% endif %}
    "@mpxjs/core": "^2.5.33"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^5.0.3",
    "@mpxjs/webpack-plugin": "^2.6.0",
    {% if transWeb %}
    "http-server": "^0.12.0",
    "npm-run-all": "^4.1.5",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^3.2.0",
    "vue-loader": "^14.2.4",
    "vue-router": "^3.1.3",
    "vue-template-compiler": "^2.6.10",
    "style-loader": "^1.0.1",
    {% endif %}
    {% if needUnitTest and not babel7Support %}
    "jest": "^24.9.0",
    "miniprogram-simulate": "^1.1.6",
    "babel-jest": "^22.4.4",
    {% elif needUnitTest and babel7Support %}
    "jest": "^24.9.0",
    "miniprogram-simulate": "^1.1.6",
    "babel-jest": "^25.3.0",
    {% endif %}
    {% if needEslint %}
    "eslint-loader": "^2.1.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.0.0",
    "eslint-config-babel": "^8.0.2",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-local-rules": "^0.1.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    {% endif %}
    {% if tsSupport %}
    "ts-loader": "^6.0.0",
    "typescript": "^3.5.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    {% endif %}
    {% if babel7Support %}
    "@babel/core": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/runtime-corejs3": "^7.10.4",
    "babel-loader": "^8.1.0",
    {% else %}
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-runtime": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    {% endif %}
    "chalk": "^2.3.2",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "ora": "^2.0.0",
    "path": "^0.12.7",
    "rimraf": "^2.6.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.2",
    "webpack-bundle-analyzer": "^3.3.2"
  }
}
